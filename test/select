#!/usr/bin/env python

import qwer
from testify import *

equiv(((2, []), (4, []), (6, [])),
  qwer.select(('a',),
    (0, [('b', (1, [('a', (2, []))])), ('c', (3, [('a', (4, [])), ('b', (5, [('a', (6, []))]))]))])))

equiv(((4, []), (6, [])),
  qwer.select(('c', 'a'),
    (0, [('b', (1, [('a', (2, []))])), ('c', (3, [('a', (4, [])), ('b', (5, [('a', (6, []))]))]))])))

equiv(((6, []),),
  qwer.select(('c', 'b', 'a'),
    (0, [('b', (1, [('a', (2, []))])), ('c', (3, [('a', (4, [])), ('b', (5, [('a', (6, []))]))]))])))

equiv(((4, []),),
  qwer.select(('c', '>', 'a'),
    (0, [('b', (1, [('a', (2, []))])), ('c', (3, [('a', (4, [])), ('b', (5, [('a', (6, []))]))]))])))

equiv(((6, []),),
  qwer.select(('c', '>', 'b', 'a'),
    (0, [('b', (1, [('a', (2, []))])), ('c', (3, [('a', (4, [])), ('b', (5, [('a', (6, []))]))]))])))
